journal = {Apllied {\&} Environmental Microbiology},
number = {16},
pages = {4947--4957},
title = {{A Novel Immunofluorescence Flow Cytometry Technique Detects the Expansion of Brown Tides Caused by Aureoumbra lagunensis to the Caribbean Sea}},
