journal = {Biotechnology Advances},
keywords = {Algae,Bacteria,Biogeochemical cycling,Coevolution,Cyanobacteria,Industrial use,Microbial ecology,Symbiosis},
pages = {14--29},
title = {{Algae-bacteria interactions: Evolution, ecology and emerging applications-NC-ND license (http://creativecommons.org/licenses/by-nc-nd/4.0/)}},
