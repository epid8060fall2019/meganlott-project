journal = {Ecology letters},
keywords = {Eco-evolutionary dynamics,Foraging-to-Farming hypothesis,metabolite exchange,metagenomics,microbial communities,mutualism,phytoplankton,vitamins},
month = {jul},
number = {7},
pages = {810--22},
pmid = {27282316},
publisher = {Wiley-Blackwell},
title = {{How mutualisms arise in phytoplankton communities: building eco-evolutionary principles for aquatic microbes.}},
url = {http://www.ncbi.nlm.nih.gov/pubmed/27282316 http://www.pubmedcentral.nih.gov/articlerender.fcgi?artid=PMC5103174},
volume = {19},
year = {2016}
}
